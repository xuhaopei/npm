{
  "compilerOptions": {
    "target": "ES2016",
    "module": "CommonJS",
    "noEmit": false,
    "noImplicitAny": true,
    "strict": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"]
    },
    "outDir": "./dist",
    "types": ["node", "@types/node"]
  },
  "include": ["./src"],
  "exclude": ["node_modules", "dist"]
}
